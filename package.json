{
  "name": "arrispwod",
  "version": "1.1.0",
  "description": "Arris password of day generator",
  "main": "dist/arrispwod.cjs.js",
  "module": "dist/arrispwod.esm.js",
  "browser": "dist/arrispwod.umd.js",
  "repository": "https://github.com/jesusgoku/arrispwod",
  "author": "Jes√∫s Urrutia <jesus.urrutia@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "documentation": "^12.3.0",
    "husky": "^4.2.5",
    "istanbul": "^0.4.5",
    "mocha": "^5.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.6.0",
    "rollup-plugin-terser": "^5.3.0",
